<h1>Collaborators</h1>
<div class="row">
  <div class="col-md-8">
    <% @users.each do |user| %>
      <div class="media">
        <div class="media-body">
          <div class="media-heading">
            <p><%= user.email %></p>
            <% if user.wikis.include?(@wiki) %>
              <%= link_to "Remove", wiki_collaborator_path(@wiki, @wiki.collaborator(user.id)), method: :delete, class: 'btn btn-danger' %>
            <% else %>
              <%= link_to "Add", wiki_collaborators_path(@wiki, user_id: user.id), method: :post, class: 'btn btn-success' %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
